<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sequence_view_inherits" model="ir.ui.view">
            <field name="name">sequence.view.inherits</field>
            <field name="model">ir.sequence</field>
            <field name="inherit_id" ref="base.sequence_view" />
            <field name="priority" eval="17" />
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page[1]/group[2]" position="after">
                    <group col="3" string="Legend (for Custom Sequence)" name="legend_custom">
                        <group>
                            <label colspan="2" string="Partner Invoice: custom_partner"/>
                        </group>
                        <group>
                            <label colspan="2" string="Partner Sale: custom_partner"/>
                        </group>
                        <group>
                            <label colspan="2" string="Partner Purchase: custom_partner"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>